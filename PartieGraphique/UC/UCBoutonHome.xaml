<UserControl x:Class="PartieGraphique.UC.UCBoutonHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PartieGraphique.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!--Bouton avec image pour retour à la PageAccueil-->
        <Button Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Top" Width="50" Height="50" Margin="5"  ToolTip="Home" Click="Bouton_Accueil">
            <Button.Content>
                <Image Source="/Images;component/boutonHome.png" ToolTip="Retour"/>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
